! Color Scheme
#include "$HOME/.config/colors/nord.dark"

! URXVT Config
URxvt.geometry:     72x18
URxvt*font:         xft:FantasqueSansMono Nerd Font:size=12:antialias=true
URxvt*boldFont:     xft:FantasqueSansMono Nerd Font:size=12:antialias=true
URxvt*italicFont:   xft:FantasqueSansMono Nerd Font:size=12geekvape:antialias=true
URxvt*letterSpace:  -1
URxvt.scrollBar:    false
URxvt.depth:        32
URxvt.iso14755:     true
URxvt.iso14755_52:  false

URxvt.url-launcher:   /usr/bin/chromium
URxvt.underlineURLs:  True
URxvt.iconFile:       /usr/share/icons/hicolor/scalable/apps/Terminal.svg

!TABS
URxvt.perl-ext-common : default,tabbed,selection-to-clipboard
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    3
URxvt.tabbed.tab-bg:    0

Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! Rofi
rofi.padding: 20
rofi.line-padding: 2
rofi.hide-scrollbar: true
rofi.separator-style: solid
rofi.width: 20
rofi.lines: 6
!Enable the extended coloring options
rofi.color-enabled: true
! Property Name     BG       Border   Separator
rofi.color-window:  #3B4252, #8fbcbb, #8fbcbb
! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #3B4252, #E5E9F0, #3B4252, #3B4252, #8FBCBB
rofi.font: Cascadia Code 12
