! Color Scheme
#include ".config/colors/nord.dark"
! #include ".config/colors/gruvbox-urxvt.xresources"
! #include ".config/colors/gruvbox-urxvt.xresources"

! URXVT Config
URxvt.geometry:     72x18
URxvt*font:         xft:Hack Nerd Font Mono:style=Regular:size=10:antialias=true
URxvt*letterSpace:  0
URxvt.scrollBar:    false
URxvt.depth:        32s
URxvt.iso14755:     true
URxvt.iso14755_52:  false

URxvt.url-launcher:   /usr/bin/chromium
URxvt.underlineURLs:  True

!TABS
URxvt.perl-ext-common : default,tabbed,selection-to-clipboard
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    3
URxvt.tabbed.tab-bg:    0

Xft.dpi: 162
! xdpyinfo | grep -B2 resolution
! 3840*2160 = 162*161 DPI

! These might also be useful depending on your monitor and personal preference:
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

xterm*font:         xft:Hack Nerd Font Mono:style=Regular:size=10:antialias=true
