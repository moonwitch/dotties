! Enable the extended coloring options
rofi.color-enabled:   true

! Enable modi
rofi.modi:            run,drun,window,ssh

! Set the desired separator style
rofi.separator-style: dash
rofi.font:            Hack Nerd Font 12

! Terminal
rofi.terminal:        urxvt
rofi.ssh-command:	{terminal} -e "{ssh-client} {host}"
rofi.run-shell-command:	{terminal} -e "{cmd}"

! Fuzzy Searching
rofi.matching:        fuzzy

rofi.sort:            true

!Icons test
rofi.show-icons:      true

!Theme
rofi.theme:           ~/.local/share/rofi/themes/nord.rasi

! vim: ft=xdefaults
