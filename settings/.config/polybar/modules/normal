### General modules ###

# -- Show the battery percentage and the remaining time
[module/battery]
type = internal/battery
# Settings
full-at = 99
battery = BAT1
adapter = ACAD
# Style
format-charging = %{T2} <label-charging>
format-charging-background = ${colors.background}
format-charging-foreground = ${colors.accent}
format-charging-padding = 3
format-discharging = %{T2}<ramp-capacity> <label-discharging>
format-discharging-background = ${colors.background}
format-discharging-foreground = ${colors.accent}
format-discharging-padding = 3
format-full = %{T2}<ramp-capacity> <label-full>
format-full-background = ${colors.background}
format-full-foreground = ${colors.accent}
format-full-padding = 3
time-format = %{F#728cbb T4}%H:%M
label-charging = %{T1}%percentage%%  %time%
label-charging-foreground = ${colors.foreground}
label-discharging = %{T1}%percentage%% %time%
label-discharging-foreground = ${colors.foreground}
label-full = %{T1}%percentage%% %{F#728cbb}FULL
label-full-foreground = ${colors.foreground}
ramp-capacity-foreground = ${colors.accent}
ramp-capacity-4 = 
ramp-capacity-3 = 
ramp-capacity-2 = 
ramp-capacity-1 = 
ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.urgent}
# --

# -- Show today's date and the current day, pops a calendar when clicked on
[module/date]
type = internal/date
# Style
format = %{A1:gsimplecal &:}%{T2} <label>%{A}
format-background = ${colors.background}
format-foreground = ${colors.accent}
format-padding = 3
date = %d / %m / %Y  %{F#728cbb T4}%A
label = %date%
label-foreground = ${colors.foreground}
label-font = 1
# --

# -- Show the current network status
[module/network]
type = custom/script
# Scripting
exec = ~/.config/polybar/scripts/check_network.sh
interval = 5
# Style
format-background = ${colors.background}
format-foreground = ${colors.accent}
format-padding = 2
# Clicking events
click-left = python ~/.config/rofi/scripts/network.py
click-right = python ~/.config/rofi/scripts/network.py
# --

# -- Show the current time
[module/time]
type = internal/date
# Style
format = %{T2} <label>
format-background = ${colors.background}
format-foreground = ${colors.accent}
format-padding = 3
time = %H:%M
label = %time%
label-foreground = ${colors.foreground}
label-font = 1
# --

# -- Show the number of updates available and sends notifications
[module/updates]
type = custom/script
# Scripting
exec = ~/.config/polybar/scripts/check_updates.sh
# Notifications will pop every 6 hours
interval = 21600
tail = true
# Style
format-background = ${colors.background}
format-padding = 3
# Clicking events
click-left = pamac-manager &
click-right = pamac-manager --updates &
# --

# -- Workspaces currently used
[module/workspaces]
type = internal/i3
# Settings
index-sort = true
wrapping-scroll = false
# Style
format = <label-state>
ws-icon-default = ﱣ
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;ﲵ
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;﬘
ws-icon-8 = 9;
# Active workspaces
label-focused = "  %icon% %{T5}#%index% "
label-focused-background = ${colors.background_light}
label-focused-foreground = ${colors.foreground}
label-focused-font = 2
# Inactive workspaces
label-unfocused = "  %icon% %{T5}#%index% "
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground_dark}
label-unfocused-font = 2
# Workspaces with urgency hint
label-urgent = "  %icon% %{T5}#%index% "
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.urgent}
label-urgent-font = 2
# --

