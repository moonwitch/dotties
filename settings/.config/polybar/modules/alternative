### General modules with the accent as their background ###

# -- Show the current brightness level (as a percentage)
[module/brightness_alt]
type = internal/backlight
# Settings
card = intel_backlight
# Style
format = %{T2} <label>
format-background = ${colors.accent}
format-foreground = ${colors.foreground}
format-padding = 3
label = %percentage%%
label-font = 1
# --

# -- Show the temperature of the first core, display a warning when >80°C
[module/cpu_temp_alt]
type = internal/temperature
# Settings
interval = 1
thermal-zone = 0
warn-temperature = 80
units = true
# Style
format = %{T2} <label>
format-background = ${colors.accent}
format-foreground = ${colors.foreground}
format-padding = 3
format-warn = %{T2} <label-warn>
format-warn-background = ${colors.urgent}
format-warn-foreground = ${colors.foreground}
format-warn-padding = 3
label = %temperature-c%
label-font = 1
label-warn = %temperature-c%
label-warn-font = 1
# --

# -- Distro logo starting rofi -drun if clicked on
[module/distro_alt]
type = custom/text
# Content of the label
content = %{T2}%{T-}
content-foreground = ${colors.foreground}
content-background = ${colors.accent}
content-padding = 2
# Clicking events
click-left = rofi -no-lazy-grab -show drun -display-drun apps -theme themes/drun.rasi
click-right = rofi -no-lazy-grab -show drun -display-drun apps -theme themes/drun.rasi
# --

# -- Show an icon, clicking on it triggers the rofi powermenu script
[module/powermenu_alt]
type = custom/text
# Content of the label
content = %{T2}%{T-}
content-background = ${colors.accent}
content-foreground = ${colors.foreground}
content-padding = 2
# Clicking events
click-left = exec ~/.config/rofi/scripts/powermenu.sh
click-right = exec ~/.config/rofi/scripts/powermenu.sh
# --

# -- Show the current volume as a percentage but also if it's muted or not
[module/volume_alt]
type = internal/pulseaudio
# Settings
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
# Style
format-volume = %{T2}<ramp-volume> <label-volume>
format-volume-background = ${colors.accent}
format-volume-foreground = ${colors.foreground}
format-volume-padding = 3
format-muted = %{T2} <label-muted>
format-muted-background = ${colors.accent}
format-muted-foreground = ${colors.foreground}
format-muted-font = 2
format-muted-padding = 3
label-volume = %percentage%%
label-volume-font = 1
label-muted = %percentage%%
label-muted-font = 1
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
# --

# -- Workspaces currently used
[module/workspaces_alt]
type = internal/i3
# Settings
index-sort = true
wrapping-scroll = false
# Style
format = <label-state>
ws-icon-default = ﱣ
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;ﲵ
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;﬘
ws-icon-8 = 9;
# Active workspaces
label-focused = %icon%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.foreground_dark}
label-focused-overline = ${colors.accent}
label-focused-font =  2
label-focused-padding = 2
label-focused-margin = 1
# Inactive workspaces
label-unfocused = %icon%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground_dark}
label-unfocused-font = 2
label-unfocused-padding = 2
label-unfocused-margin = 1
# Workspaces with urgency hint
label-urgent = %icon%
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.urgent}
label-urgent-font = 2
label-urgent-padding = 2
label-urgent-margin = 1
# --

# vim:ft=dosini
