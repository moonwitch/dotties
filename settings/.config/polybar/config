; monospace is an aliased font name, see ~/.config/fontconfig/fonts.conf
font-0 = "Hasklug Nerd Font Mono:style=Regular:size=18;5"
font-1 = "Hasklug Nerd Font Mono:style=Regular:size=30;8"

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Bars
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[bar/topbar]
inherit = common-bar
top = true
monitor =
modules-left = bspwm i3
modules-center = playerctl
modules-right = pulseaudio-control temperature cpu memory date
module-margin-left = 1
module-margin-right = 1

; Tray
tray-background = ${colors.background}
tray-padding = ${layout.module-padding}
tray-position = right
; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false
tray-maxsize = 35
tray-scale = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Modules
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[module/pulseaudio-control]
type = custom/script
tail = true
format-underline = ${colors.blue1}
label-padding = 2
;label-background = ${colors.blue}
exec = ~/bin/poly-scripts/pulseaudio-control --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" --sink-nickname "alsa_output.pci-0000_00_1b.0.analog-stereo:Speakers" --sink-nickname "alsa_output.usb-Cosair_Corsair_VOID_Surround_USB_Sound_Adaptor_00000000-00.analog-stereo:Headphones" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control next-sink
scroll-up = pulseaudio-control --volume-max 100 up
scroll-down = pulseaudio-control --volume-max 100 down

