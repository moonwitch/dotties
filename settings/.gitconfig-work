# This is Git's per-user configuration file.
[user]
	name = Kelly Crabb√©
	email = Kelly.Crabbe@lineas.net
	editor = $EDITOR
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
[web]
	browser = $BROWSER
[push]
	default = current
[color]
	ui = auto
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	co = checkout
	cob = checkout -b
	coo = !git fetch && git checkout
	br = branch
	brd = branch -d
	brD = branch -D
	merged = branch --merged
	st = status
	ca = commit -a
	cm = commit -m
	cp = cherry-pick
	amend = commit --amend -m
	po = push origin
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	la = "!git config -l | grep alias | cut -c 7-"
	unstage = reset HEAD --
	last = log -1 HEAD
  update-submodules = submodule update --remote --merge
	pushd = push -u origin HEAD
[status]
	submoduleSummary = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[core]
	excludesfile = /home/kelly/.gitignore
