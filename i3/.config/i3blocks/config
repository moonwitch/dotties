align=center
separator=false
separator_block_width=20
markup=pango

[mediaplayer]
command=playerctl metadata --format "{{ artist }} - {{ title }}"
interval=2
label=<span color="#A3BE8C"> </span>

[nm-vpn]
command=nm-vpn
init_color=#EBCB8B
on_color=#A3BE8C
label=<span color="#A3BE8C">旅 </span>
interval=5

[volume-pulseaudio]
command=/usr/lib/i3blocks/volume-pulseaudio/volume-pulseaudio
interval=persist
USE_ALSA_NAME=1
SUBSCRIBE=1

[memory]
command=free -h --si | awk 'FNR==2{ print $0 }' | awk '{ print $7 }'
interval=2
label=<span color="#A3BE8C"> </span>

[time]
command=date '+%H:%M'
interval=5
label=<span color="#EBCB8B"> </span>

[date]
command=date '+%A %m/%d'
interval=60
label=<span color="#5E81AC"> </span>

[dunst]
command=/usr/lib/i3blocks/dunst/dunst
interval=once
format=json
markup=pango
