[global]
    monitor = 0
    follow = mouse
    geometry = "700x60-20+48"
    indicate_hidden = yes
    shrink = false
    transparency = 10
    notification_height = 100
    separator_height = 2
    padding = 10
    horizontal_padding = 10
    frame_width = 2
    frame_color = "#dab997"
    separator_color = frame
    sort = yes
    idle_threshold = 120

    ### mouse
    # Defines action of mouse event
    # Possible values are:
    # * none: Don't do anything.
    # * do_action: If the notification has exactly one action, or one is marked as default,
    #              invoke it. If there are multiple and no default, open the context menu.
    # * close_current: Close current notification.
    # * close_all: Close all notifications.
    mouse_left_click = do_action
    mouse_middle_click = close_all
    mouse_right_click = close_current

    ### Text ###
    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    # Markup is allowed
    format = "<b>%a: %s</b>\n%b"
    font = Hasklug Nerd Font
    line_height = 5
    markup = full
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = right
    max_icon_size = 64
    #icon_folders = /home/kelly/.icons/:/usr/share/icons/
    icon_path = "/usr/share/icons/Moka/32x32@2x/status/:/usr/share/icons/Moka/32x32@2x/apps/:/usr/share/icons/Moka/32x32@2x/devices/:/usr/share/icons/Adwaita/scalable/status/:/usr/share/icons/Adwaita/scalable/apps/:/usr/share/icons/Adwaita/scalable/devices/"

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -p dunst:
    browser = $BROWSER -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false

[experimental]
    per_monitor_dpi = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+shift+grave
    context = ctrl+shift+period

[urgency_low]
 	background = "#282828"
	foreground = "#ebdbb2"
    frame_color = "#83a598"
    timeout = 10
 
[urgency_normal]
 	background = "#282828"
	foreground = "#ebdbb2"
    frame_color = "#fe8019"
    timeout = 10

[urgency_critical]
 	background = "#282828"
	foreground = "#ebdbb2"
    frame_color = "#fb4934"
    timeout = 0

[signed_on]
    appname = Pidgin
    summary = "*signed on*"

[signed_off]
    appname = Pidgin
    summary = *signed off*

[says]
    appname = Pidgin
    summary = *says*

[gmail]
    desktop_entry = chromium.desktop
    action = /usr/bin/chromium -foreground https://gmail.com

[workmail]
    appname = Firefox: Outlook
    action = /usr/bin/firefox -foreground

[spotify]
    desktop_entry = spotify.desktop
    #actions = 

[mattermost]
    desktop_entry = mattermost-desktop.desktop

